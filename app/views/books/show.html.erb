<div class="delete-book-container">
  <div class="container-fluid text-center">
    <div class="row">
      <div class="col-sm-12">
        <% if current_user[:id] == @book.user_id %>
          <p>Are you sure you want to delete this title?</p>
          <p>This action cannot be undone.</p>
          <div class="row">
            <div class="col-sm-12">
              <%= button_to "Yes, delete this", book_path, :method => :delete, :class => "delete-book-button" %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <%= link_to "No, take me back", book_madlibs_path(@book.id), :class => "dont-delete-book"  %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
