<h1 id="h1-overrides" class="home-page">Log in!</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 text-center">
      <form action="/session" method="POST" class="log-in-form">
        <input
          type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

        <label for="user_username">Username</label><br>
        <input type="text" name="user[username]" id="user_username" class="sign-up-inputs">
        <br>

        <label for="user_password">Password</label><br>
        <input type="password" name="user[password]" id="user_password" class="sign-up-inputs">
        <br>

        <input type="submit" value="Log in!" class="sign-up-inputs log-in-button"><br>

        <%if current_user.nil? %>
          <a href="auth/facebook">
            <button type="button" name="button" id="facebook-button">
              <i class="fa fa-facebook"></i>
              Login with Facebook
            </button>
          </a>
        <% end %>

      </form>
    </div>
  </div>
</div>
