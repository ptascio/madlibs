<div class="show-madlibs-main-container">

<div class="container-fluid  text-center">
  <div class="row show-madlibs-header">
    <div class="col-sm-12">
      <h1><%= @madlib.title %></h1>
      <h4>from the book:</h4>
      <h3><%= link_to @madlib.book.title, book_madlibs_path(@madlib.book_id) %></h3>
    </div>
  </div>

<div class="show-madlibs-container">
  <div class="row">
    <div class="col-sm-12">
      <% @madlib.story.split.each do |word| %>
        <% punctuation=[".", "!", "?"] %>
        <% if word[0] == "_" %>
          <% if punctuation.include?(word[-1])%>
            <span class="user-word"><%= word[0..-2] %></span><span><%= word[-1] %></span>
          <% else %>
            <span class="user-word"><%= word[0..-1] %></span>
            <% end %>
        <% else %>
          <span><%= word %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
    <div class="col-sm-12">
      <%= link_to "Reset", edit_book_madlib_path(@madlib.book_id, @madlib.id, :reset => "true"),
      :class => "reset-madlib" %>
  </div>
</div>

</div>
</div>
