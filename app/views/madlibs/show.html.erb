<div class="container-fluid  text-center">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @madlib.title %></h1>
    </div>
  </div>

<div class="show-container">
  <div class="row">
    <div class="col-sm-12">
      <% @madlib.story.split.each do |word| %>
        <% if word[0] == "_" %>
          <span style="color:red;"><%= word[0..5] %></span><span><%= word[6]%></span>
        <% else %>
          <span><%= word %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>




<div class="row">
    <div class="col-sm-12">
      <p><%= link_to "Reset", edit_book_madlib_path(@madlib.book_id, @madlib.id, :reset => "true") %></p>
      <p><%= link_to @madlib.book.title, book_madlibs_path(@madlib.book_id) %></p>
  </div>
</div>

</div>
