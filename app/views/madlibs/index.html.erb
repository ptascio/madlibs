<h1 id="h1-overrides" class="home-page"><%= @book.title %></h1>
<div class="container-fluid">
  <div class="row">
    <% @madlibs.each do |ml| %>
      <div class="col-sm-3" style="border:1px solid #000;">
        <% if ml.wordform.misswords.nil? %>
          <%= link_to ml.title, wordform_path(ml.wordform.id) %>
        <% else %>
          <%= link_to ml.title, book_madlib_path(@book, ml.id) %>
        <% end %>
        <div class="row">
          <div class="col-sm-3">
              <%= link_to "Edit", edit_book_madlib_path(@book, ml.id)%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<% if !current_user.nil? %>
  <% if current_user[:id] == @book.user_id %>
    <%= button_to "Write a story!", new_book_madlib_path, :method => :get %>
    <%= button_to "Delete this Book", @book, :method => :get %>
  <% end %>
<% end %>
