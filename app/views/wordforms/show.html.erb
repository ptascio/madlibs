      <p>from the</p>
    <h3>
      <%= @madlib.book.title %>
    </h3>
    <p>book</p>
  </div>
  </div>
</div>
<div class="word-submit-form">
  <div class="row">
    <div class="col-sm-12 text-center">
      <p>This story needs a total of <%= @wordform.count %> words.</p>
      <br />

      <% if @wordform.misswords.nil? %>
        <%= form_for @wordform, url: {action: "update"}, :html => {:class => "submit-words"} do |f| %>
          <% @wordform.words.gsub(/\n/, "").split(", ").each_with_index do |word, idx| %>
              <label><%= word %></label><br>
              <%= text_field_tag "misswords[]"
              %><br>
          <% end %>
          <%= f.submit "Submit" %>
        <% end %>
        <% else %>
        <%= form_for @wordform, url: {action: "update"} do |f| %>
          <% @wordform.words.gsub(/\n/, "").split(", ").each_with_index do |word, idx| %>
            <label><%= word %></label>
            <%= text_field_tag "misswords[]", params[:misswords][idx],
            :onclick => '{$(this).val("");};'
            %><br>
          <% end %>
          <%= f.submit "Submit" %>
        <% end %>
      <% end %>


      <%= form_for(@wordform) do |f| %>
        <% if @wordform.errors.any? %>
          <div>
            <ul>
            <% @wordform.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
          <% end %>
      <% end %>

      <%= link_to "More " + @madlib.book.title + " Stories", book_madlibs_path(@madlib.book_id) %>
    </div>
  </div>
</div>
